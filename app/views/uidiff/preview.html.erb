                # text = "#{text}#{@law_elements[article.to_i][paragraph.to_i][item.to_i][:text]}" if @law_elements[article.to_i][paragraph.to_i][item.to_i]
              }
            else
              # text = "#{text}#{@law_elements[article.to_i][paragraph.to_i][0][:text]}" if @law_elements[article.to_i][paragraph.to_i][0]
            end
          }
        else
          # # text = "#{text}#{@law_elements[article.to_i][0][0][:text]}" if @law_elements[article.to_i][0][0]
        end
      }
    end
  %>
  <p><strong>GAMALT:</strong><br />
  <%= text %></p>
  <br />
