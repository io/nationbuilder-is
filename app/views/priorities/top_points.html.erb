<link href="/stylesheets/points_layout.css" rel="stylesheet" type="text/css" />

<div id="" class="container_12">
	<div class="grid_6">
		<div class="sub_header">
			<h4><%=t('points.top_points.best_points_for_endorse')%></h4>
