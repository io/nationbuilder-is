<% if ['color_schemes'].include?(params[:controller]) %>
	<%= javascript_include_tag "colorpicker" %>
<% end %>
<%= javascript_include_tag "facebox","jquery.autocomplete.pack","jquery.textCounting.min", "jquery.timeago", "jquery.truncator","autoresize.jquery.min","jquery.defaultvalue","jquery.hoverIntent.minified","jquery.bgiframe.min","jquery.corners.min","application" %>

<script type="text/javascript">
jQuery(document).ready(function() {
	<% if @tag %>
		jQuery("input#priority_name").DefaultValue("<%= escape_javascript(@tag.prompt_display) %>");
	<% else %>
		jQuery("input#priority_name").DefaultValue("<%= escape_javascript(current_government.prompt) %>");
	<% end %>
	jQuery("input#q_top").DefaultValue("<%= t('searches.new.submit') %>");
	jQuery("input#user_login_search").DefaultValue("<%= t('searches.member.submit') %>");
	jQuery("input#right_priority_box").DefaultValue("<%= t('priorities.yours.prompt') %>") 
	jQuery(".comment_content").truncate({max_length: 1000, more: "<%= t('comments.full.show') %>", less: "<%= t('comments.full.hide') %>"});
	<%= render :partial => "shared/javascripts_reloadable" %>
});
</script>
